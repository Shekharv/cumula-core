#!/usr/bin/env php
<?php

if (trim(exec('whoami')) !== 'root') {
    echo "This script needs to be run as root.  Executing with sudo\n";
    system('sudo '. $argv[0]);
    exit(0);
}

system('pear upgrade pear');

$pear_channels = array(
    'pear.phing.info',
    'pear.phpunit.de',
    'components.ez.no',
    'pear.symfony-project.com',
    'pear.domain51.com',
    'pear.php-tools.net',
);

$pear_projects = array(
    'phing/phing',
    'HTTP_Request2-beta',
    'phpunit/PHPUnit',
    'pat/vfsStream-beta',
);


// Set-up pear channels to install from
foreach ($pear_channels as $channel) {
    system('pear channel-discover '. escapeshellarg($channel));
}

// Install projects
foreach ($pear_projects as $project) {
    system('pear install '. escapeshellarg($project));
}

if (!in_array('xdebug', get_loaded_extensions())) {
    // Install XDebug or display a meessage to the user to install it
    if (PHP_OS == 'Linux' && stristr(php_uname('v'), 'Ubuntu') !== FALSE) {
        system('apt-get install php5-xdebug');
    }
    else {
            echo "Please follow the instructions at http://xdebug.org/docs/install to install XDebug\n";
    }
}
